
entrypoint = "html/index.html"
modules = ["web"]

[nix]
channel = "stable-24_11"
packages = ["static-web-server"]

[deployment]
publicDir = "."
deploymentTarget = "static"

[workflows]
runButton = "Serve static"

[[workflows.workflow]]
name = "Serve static"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
echo "Serving project root (.) using static-web-server. Open the Preview to see your output.
To see changes you make, refresh the preview. Console logs are available in the Preview devtools or your browser devtools." && static-web-server -w ./.config/static-web-server.toml > /dev/null 2>&1
"""
waitForPort = 80

[[ports]]
localPort = 80
externalPort = 80

[agent]
expertMode = true
entrypoint = "html/index.html"
modules = ["web"]

[nix]
channel = "stable-24_11"
packages = []

[deployment]
publicDir = "."
deploymentTarget = "static"

[workflows]
runButton = "Serve static"

[[workflows.workflow]]
name = "Serve static"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
echo "Serving project root (.) so html files can reference ../css and ../assets correctly. Open the Preview to see your output.
To see changes you make, refresh the preview. Console logs are available in the Preview devtools or your browser devtools." && python3 -m http.server 80 --directory . > /dev/null 2>&1
"""
waitForPort = 80

[[ports]]
localPort = 80
externalPort = 80

[agent]
expertMode = true
